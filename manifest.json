{
  "manifest_version": 2,
  "name": "YouTube Speed Buttons",
  "version": "1.0",
  "description": "Adds playback speed buttons above YouTube's recommended videos section",
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/watch*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "permissions": ["activeTab"]
}
