{
  "manifest_version": 2,
  "name": "YouTube Speed Buttons",
  "version": "1.4",
  "description": "Adds playback speed buttons above YouTube's recommended videos section",
  "browser_specific_settings": {
    "gecko": {
      "id": "me@neilsmith.fyi",
      "data_collection_permissions": {
        "required": ["none"]
      }
    }
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "permissions": ["activeTab"]
}
